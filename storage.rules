rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    // Product images - Public read, Admin write
    match /products/{productId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Category images - Public read, Admin write
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Slider images/videos - Public read, Admin write
    match /sliders/{sliderId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Banner ads - Public read, Admin write
    match /banners/{bannerId}/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admin uploads - Admin only
    match /admin/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
